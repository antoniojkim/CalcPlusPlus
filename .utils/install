#!/bin/bash

root_dir=$(pwd)
include_dir="$root_dir/.includes"
libs_dir="$root_dir/.libs"

rm -rf $include_dir
mkdir -p $include_dir
rm -rf $libs_dir
mkdir -p $libs_dir

# Install GNU Scientific Library
cd $include_dir
wget ftp://ftp.gnu.org/gnu/gsl/gsl-latest.tar.gz
tar -xzf gsl-latest.tar.gz
rm -f gsl-latest.tar.gz
gsl_dir=$include_dir/$(ls | grep "gsl-")
cd $gsl_dir
./configure && make
ln -s $gsl_dir/gsl $include_dir/gsl
ln -s $gsl_dir/.libs/libgsl.a $libs_dir/libgsl.a
ln -s $gsl_dir/cblas/.libs/libgslcblas.a $libs_dir/libgslcblas.a

# Install QT5
# cd $include_dir
# git clone https://code.qt.io/qt/qt5.git
# qt_dir=$include_dir/qt5
# cd $qt_dir
# perl init-repository
# ./configure -developer-build -opensource -nomake examples -nomake tests -static -static-runtime -confirm-license
# make -j10
